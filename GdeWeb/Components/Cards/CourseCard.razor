    .cat-icon-wrap {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 10px;
        border: 1px solid rgba(15,23,42,.08);
        margin: 4px 0;
    }

    .cat-icon {
        color: var(--mud-palette-secondary);
    }
</style>
